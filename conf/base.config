// conf/base.config

process {
    // Default resources for all processes
    cpus = 2
    memory = '6.GB'
    time = '4.h'

    withName: BWA_MEM {
        cpus = 8
        memory = '32.GB'
        time = '24.h'
    }

    withName: GATK_HAPLOTYPECALLER {
        cpus = 4
        memory = '24.GB'
        time = '48.h'
    }
    
    withName: VEP {
        cpus = 8
        memory = '48.GB'
        time = '12.h'
    }
}

// Container configuration
// This assumes one Docker container has all tools.
// Alternatively, you can specify a container for each process.
docker {
    enabled = true
    // Replace with your Docker Hub username and repository name
    image = 'your-username/neurogenomics-pipeline:latest'
}

singularity {
    enabled = true
    // Image will be pulled from Docker Hub
    image = 'docker://your-username/neurogenomics-pipeline:latest'
}
